<h2>
    <%= book.title %>
</h2>
<img width="100" height="150" src="<%=book.coverImagePath%>">
<div>Author <%=book.author.name%>
</div>
<div>Publish date <%=book.publishDate.toDateString()%>
</div>
<div>Page count <%=book.pageCount%>
</div>
<div>Descritption <%=book.descritption%>
</div>

<div class="form-row form-row-end btn-row">
    <a class="btn btn-primary" href="/books/<%=book.id%>/edit">Edit</a>
    <%- include("../partials/deleteForm", { url:`/books/${book.id}` }) %>
        <a class="btn btn-primary" href="/authors/<%=book.author.id%>">Show Author</a>
</div>